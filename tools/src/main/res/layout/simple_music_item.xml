<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivSimple_icon"
        android:padding="10dp"
        android:src="@drawable/ic_album_black_24dp"
        android:contentDescription="@string/Description" />
    <ImageView
        android:id="@+id/ivSimple_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:visibility="gone"
        android:src="@drawable/ic_equalizer_black_24dp"
        android:contentDescription="@string/Description"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_toRightOf="@id/ivSimple_icon"
        android:layout_toEndOf="@id/ivSimple_icon"
        android:layout_toLeftOf="@id/ivSimple_play"
        android:layout_toStartOf="@id/ivSimple_play"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvSimple_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:ellipsize="middle"
            android:maxLines="1"
            android:textSize="@dimen/centre"
            android:textColor="@color/text_black"
            />
        <TextView
            android:id="@+id/tvSimple_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/little"
            android:textColor="@color/text_gray"

            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_toRightOf="@id/ivSimple_icon"
        android:layout_toEndOf="@id/ivSimple_icon"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"/>
</RelativeLayout>