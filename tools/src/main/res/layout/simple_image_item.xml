    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ivSimple_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/example"/>
